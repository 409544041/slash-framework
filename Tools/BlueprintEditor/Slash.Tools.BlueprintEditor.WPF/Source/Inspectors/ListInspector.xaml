            <Binding Path="StringValue" Converter="{StaticResource ListToStringConverter}" />
        </Label>
        <Button Name = "BtEdit" Grid.Column = "2" Click = "BtEdit_OnClick">
            ...
        </Button>-->
    </StackPanel>
</inspectors:InspectorControl>
<inspectors:InspectorControl x:Class="BlueprintEditor.Inspectors.CheckBoxInspector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                                         xmlns:inspectors="clr-namespace:BlueprintEditor.Inspectors"
                                         mc:Ignorable="d" 
             d:DesignWidth = "400" Height = "26" d:DataContext = "{d:DesignInstance inspectors:InspectorPropertyData}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width = "200"></ColumnDefinition>
            <ColumnDefinition Width = "*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Label Name = "LbName" Grid.Column = "0">
            <Binding Path = "InspectorProperty.Name"></Binding>
        </Label>
        <CheckBox Name = "CbValue" Grid.Column = "1">
            <CheckBox.IsChecked>
                <Binding Path = "Value" />
            </CheckBox.IsChecked>
        </CheckBox>
    </Grid>
</inspectors:InspectorControl>

<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Data="clr-namespace:BlueprintEditor.Data"
        xmlns:blueprints="clr-namespace:Slash.GameBase.Blueprints;assembly=Slash.GameBase"
        xmlns:controls="clr-namespace:BlueprintEditor.Windows.Controls"
        x:Class="BlueprintEditor.MainWindow"
        Title="MainWindow" Height="480" Width="525">
    <Grid>
        <Menu HorizontalAlignment="Left" Height="23" VerticalAlignment="Top" Width="517">
            <MenuItem Header="_File">
                <MenuItem x:Name="MenuFileNew" Header="_New" Click="MenuFileNew_OnClick"/>
                <Separator/>
                <MenuItem x:Name="MenuFileLoad" Header="_Open" Click="MenuFileLoad_OnClick"/>
                <Separator/>
                <MenuItem x:Name="MenuFileSave" Header="_Save" Click="MenuFileSave_OnClick"/>
                <MenuItem x:Name="MenuFileSaveAs" Header="Save_As" Click="MenuFileSaveAs_OnClick"/>
                <Separator/>
                <MenuItem x:Name="MenuFileExit" Header="_Exit" Click="MenuFileExit_OnClick"/>
            </MenuItem>
        </Menu>
        <TreeView x:Name="TreeBlueprints" HorizontalAlignment="Left" Height="252" Margin="10,28,0,0" VerticalAlignment="Top" Width="181">
            <TreeView.ItemTemplate>
                <DataTemplate DataType="controls:BlueprintTreeViewItem">
                    <TextBlock Text="{Binding BlueprintId}" />
                </DataTemplate>
            </TreeView.ItemTemplate>
        </TreeView>
        <Button x:Name="BtNewBlueprint" Content="New" HorizontalAlignment="Left" Margin="155,313,0,0" VerticalAlignment="Top" Width="36" Click="BtAddBlueprint_OnClick" RenderTransformOrigin="-0.511,0.109" Height="23"/>
        <TextBox x:Name="TbNewBlueprintId" HorizontalAlignment="Left" Height="23" Margin="10,313,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="140"/>
        <StatusBar x:Name="SbMain" HorizontalAlignment="Left" Height="25" VerticalAlignment="Bottom" Width="517">
            <StatusBarItem>
                <TextBlock x:Name="TbMessage"></TextBlock>
            </StatusBarItem>

        </StatusBar>
        <Button x:Name="BtDeleteBlueprint" Content="Delete" HorizontalAlignment="Left" Margin="10,285,0,0" VerticalAlignment="Top" Width="181" Click="BtDeleteBlueprint_OnClick" RenderTransformOrigin="-0.511,0.109" Height="23"/>

    </Grid>
</Window>

<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:windows="clr-namespace:BlueprintEditor.Windows"
        xmlns:d = "http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc = "http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable = "d"
        x:Class="BlueprintEditor.MainWindow"
        Title="MainWindow" Height="480" Width="525" Name="Main">
    <Grid>
        <Menu HorizontalAlignment="Left" Height="23" VerticalAlignment="Top" Width="517">
            <MenuItem Header="_File">
                <MenuItem x:Name="MenuFileNew" Header="_New" Click="MenuFileNew_OnClick"/>
                <Separator/>
                <MenuItem x:Name="MenuFileLoad" Header="_Open" Click="MenuFileLoad_OnClick"/>
                <Separator/>
                <MenuItem x:Name="MenuFileSave" Header="_Save" Click="MenuFileSave_OnClick"/>
                <MenuItem x:Name="MenuFileSaveAs" Header="Save_As" Click="MenuFileSaveAs_OnClick"/>
                <Separator/>
                <MenuItem x:Name="MenuFileExit" Header="_Exit" Click="MenuFileExit_OnClick"/>
            </MenuItem>
        </Menu>

        <windows:BlueprintTreeView  x:Name="TreeBlueprints" BlueprintSelectionChanged="TreeBlueprints_OnBlueprintSelectionChanged" Margin="0,23,0,-23" />
        
        <GroupBox Header="Blueprint" HorizontalAlignment="Left" Margin="196,23,0,0" VerticalAlignment="Top" Height="308" Width="311">
            <windows:BlueprintControl x:Name="BlueprintControl" AvailableComponentTypes="{Binding ElementName=Main, Path=Context.EntityComponentTypes}" />
        </GroupBox>
        
        <StatusBar x:Name="SbMain" HorizontalAlignment="Left" Height="25" VerticalAlignment="Bottom" Width="517">
            <StatusBarItem>
                <TextBlock x:Name="TbMessage"></TextBlock>
            </StatusBarItem>

        </StatusBar>

    </Grid>
</Window>

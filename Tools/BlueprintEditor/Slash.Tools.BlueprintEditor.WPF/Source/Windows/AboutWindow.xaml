<Window x:Class = "BlueprintEditor.Windows.AboutWindow"
        xmlns = "http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x = "http://schemas.microsoft.com/winfx/2006/xaml"
        Title = "About Blueprint Editor" Height = "210" Width = "320"
        xmlns:d = "http://schemas.microsoft.com/expression/blend/2008"
        xmlns:windows = "clr-namespace:BlueprintEditor.Windows"
        d:DataContext = "{d:DesignInstance windows:AboutWindow}">
    <StackPanel>
        <DockPanel>
            <Image DockPanel.Dock = "Left" Source = "/Resources/Images/Icons/Icon_slashgames_RGB.ico" Width = "100"
                   Margin = "20" />
            <StackPanel VerticalAlignment = "Center">
                <TextBlock>Blueprint Editor</TextBlock>
                <TextBlock Text = "{Binding Version}" />
                <TextBlock>Copyright 2013 Slash Games</TextBlock>
                <TextBlock>All rights reserved.</TextBlock>
            </StackPanel>
        </DockPanel>

        <Button Width = "100" Name = "ButtonClose" Click = "ButtonClose_OnClick">Close</Button>
    </StackPanel>
</Window>
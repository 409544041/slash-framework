<Window x:Class = "BlueprintEditor.Windows.ListInspectorWindow"
        xmlns = "http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x = "http://schemas.microsoft.com/winfx/2006/xaml"
        Title = "ListInspectorWindow" Height = "300" Width = "300">
    <Grid Height = "269" VerticalAlignment = "Bottom">
        <Grid.RowDefinitions>
            <RowDefinition Height = "*" />
            <RowDefinition Height = "26" />
            <RowDefinition Height = "26" />
            <RowDefinition Height = "26" />
        </Grid.RowDefinitions>
        <ListView Name = "ListView" Grid.Row = "0" ItemsSource = "{Binding Items}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text = "{Binding Item}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <DockPanel Grid.Row = "1">
            <Button DockPanel.Dock = "Right" Width = "75" Click = "OnRemove">Remove Item</Button>
            <TextBox Name = "TbInspector" Text = "{Binding SelectedItem.Item, ElementName=ListView}" />
        </DockPanel>
        <DockPanel Grid.Row = "2">
            <Button DockPanel.Dock = "Right" Width = "75" Click = "OnAdd">Add Item</Button>
            <TextBox Name = "TbAdd" />
        </DockPanel>
        <Button Grid.Row = "3" Click = "OnClose">OK</Button>
    </Grid>
</Window>